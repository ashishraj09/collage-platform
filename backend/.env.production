# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=college_platform_prod
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_DIALECT=postgres
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-should-be-long-and-random
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-for-production-should-be-long-and-random
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Production - Use AWS SES, SendGrid, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@your-college-platform.com
FROM_NAME=College Platform

# Application URLs
FRONTEND_URL=https://your-college-platform.com
BACKEND_URL=https://api.your-college-platform.com

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=error

# SSL/TLS
FORCE_SSL=true
TRUST_PROXY=true
