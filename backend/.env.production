# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_DIALECT=postgres
DB_SSL=true

# JWT Configuration
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
FROM_NAME=College Platform
EMAIL_DELAY_MS=2000

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=error

# SSL/TLS
FORCE_SSL=true
TRUST_PROXY=true