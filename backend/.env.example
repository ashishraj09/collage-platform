# Environment variables template
# Copy this file to .env.development or .env.production and fill in the values

NODE_ENV=
PORT=

# Deployment Mode (optional - auto-detected on Vercel)
# RUN_MODE=traditional  # or 'serverless' - leave empty for auto-detection

# Database Configuration
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_DIALECT=postgres
DB_SSL=false  # Set to true for production

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=

# Email Configuration
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=
FROM_NAME=
EMAIL_DELAY_MS=2000

# Application URLs
FRONTEND_URL=
BACKEND_URL=

# Security
BCRYPT_SALT_ROUNDS=
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX_REQUESTS=

# SSL/TLS (Production only)
FORCE_SSL=false
TRUST_PROXY=false

# Logging
LOG_LEVEL=
