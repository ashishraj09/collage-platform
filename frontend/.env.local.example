# Environment Variables Example
# Copy this file to .env.local for local overrides

# ==============================================
# REQUIRED: API Configuration
# ==============================================

# Backend API URL
# Development: http://localhost:3001/api
# Production: https://collage-platform-backend.vercel.app/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api

# ==============================================
# Application Configuration
# ==============================================

# Environment identifier (development | production)
NEXT_PUBLIC_ENVIRONMENT=development

# Application name displayed in UI
NEXT_PUBLIC_APP_NAME=College Platform

# Application version
NEXT_PUBLIC_VERSION=1.0.0

# ==============================================
# Feature Flags
# ==============================================

# Allow new user registration
NEXT_PUBLIC_ENABLE_REGISTRATION=true

# Development only: Bypass authentication (DO NOT USE IN PRODUCTION)
NEXT_PUBLIC_BYPASS_AUTH=false

# Enable password reset functionality
NEXT_PUBLIC_ENABLE_PASSWORD_RESET=true

# Require email verification for new accounts
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true

# ==============================================
# UI Configuration
# ==============================================

# Theme mode (light | dark)
NEXT_PUBLIC_THEME_MODE=light

# Default language code
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# ==============================================
# Notes
# ==============================================

# 1. All variables must start with NEXT_PUBLIC_ to be accessible in the browser
# 2. Never commit sensitive data (API keys, passwords) with NEXT_PUBLIC_ prefix
# 3. Restart dev server after changing environment variables
# 4. Production values are set in Vercel environment settings
