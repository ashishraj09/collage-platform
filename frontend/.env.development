REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_ENVIRONMENT=development
REACT_APP_APP_NAME=College Platform
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_BYPASS_AUTH=false
REACT_APP_ENABLE_PASSWORD_RESET=true
REACT_APP_ENABLE_EMAIL_VERIFICATION=true

# UI Configuration
REACT_APP_THEME_MODE=light
REACT_APP_DEFAULT_LANGUAGE=en

# Development Settings for Hot Reload
FAST_REFRESH=true
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
BROWSER=none
SKIP_PREFLIGHT_CHECK=true
GENERATE_SOURCEMAP=false
# Force cache busting
REACT_APP_CACHE_BUST=true
